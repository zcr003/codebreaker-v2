<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="EmojiItem">
    <item name="android:autoSizeTextType">uniform</item>
    <item name="android:padding">0dp</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="EmojiItemPullDown">
    <item name="android:textSize">@dimen/base_emoji_size</item>
    <item name="android:padding">@dimen/half_dynamic_spacing</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="GuessNumber">
    <item name="android:textSize">@dimen/guess_number_size</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textAlignment">viewEnd</item>
  </style>

  <style name="GuessText">
    <item name="android:textSize">@dimen/base_emoji_size</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="MatchCount">
    <item name="android:textSize">@dimen/match_count_size</item>
    <item name="android:includeFontPadding">false</item>
  </style>

</resources>