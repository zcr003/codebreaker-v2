<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <SeekBarPreference
    android:key="@string/code_length_pref_key"
    app:min="@integer/code_length_pref_min"
    android:max="@integer/code_length_pref_max"
    android:defaultValue="@integer/code_length_pref_default"
    app:seekBarIncrement="@integer/code_length_pref_increment"
    app:showSeekBarValue="true"
    android:title="@string/code_length_pref_title"/>

  <SeekBarPreference
    android:key="@string/pool_size_pref_key"
    app:min="@integer/pool_size_pref_min"
    android:max="@integer/pool_size_pref_max"
    android:defaultValue="@integer/pool_size_pref_default"
    app:seekBarIncrement="@integer/pool_size_pref_increment"
    app:showSeekBarValue="true"
    android:title="@string/pool_size_pref_title"/>

</PreferenceScreen>